<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellersProductCategoryActivity">


    <TextView
        android:id="@+id/slogan_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Yeni Ürün Ekle"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />


    <LinearLayout
    android:id="@+id/linear1_kategori_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/slogan_kategori"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="75dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/t_shirt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/car"
        android:layout_marginEnd="60dp"
        />

    <ImageView
        android:id="@+id/sports_t_shirt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/telefon"
        android:layout_marginEnd="60dp"
        />

    <ImageView
        android:id="@+id/kadın_elbise"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/elbise"
        />


</LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_kategori_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_kategori_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/gozluk"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book"
            android:layout_marginEnd="60dp"
            />

        <ImageView
            android:id="@+id/canta"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/restaurant"
            android:layout_marginEnd="70dp"
            />

        <ImageView
            android:id="@+id/sapka"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pajamas"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_kategori_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_kategori_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/kulaklik"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ayakkabi"
            android:layout_marginEnd="60dp"
            />

        <ImageView
            android:id="@+id/laptop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/house"
            android:layout_marginEnd="60dp"
            />

        <ImageView
            android:id="@+id/saat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/football"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4_kategori_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_kategori_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <ImageView
            android:id="@+id/mont"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/motorcycle"
            android:layout_marginEnd="60dp"
            />
        <ImageView
            android:id="@+id/ayakkabi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mp3"
            android:layout_marginEnd="60dp"
            />


        <ImageView
            android:id="@+id/telefon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cosmetics"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/arab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Araba"
        android:layout_below="@+id/linear1_kategori_layout"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/elek"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Elektronik"
        android:layout_below="@+id/linear1_kategori_layout"
        android:layout_marginStart="170dp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/elbis"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Giyim ve Aksesuar"
        android:layout_below="@+id/linear1_kategori_layout"
        android:layout_marginStart="305dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/kit"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Kitap ve Dergi"
        android:layout_below="@+id/linear2_kategori_layout"
        android:layout_marginStart="35dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/ev"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Ev ve Bahçe"
        android:layout_below="@+id/linear2_kategori_layout"
        android:layout_marginStart="175dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/cocuk"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Bebek ve Çocuk"
        android:layout_below="@+id/linear2_kategori_layout"
        android:layout_marginStart="310dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/ayak"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Ayakkabı ve Çanta"
        android:layout_below="@+id/linear3_kategori_layout"
        android:layout_marginStart="30dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/emlak"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Emlak"
        android:layout_below="@+id/linear3_kategori_layout"
        android:layout_marginStart="175dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/spor"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Spor ve Eğlence"
        android:layout_below="@+id/linear3_kategori_layout"
        android:layout_marginStart="310dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/moto"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="MotoSiklet"
        android:layout_below="@+id/linear4_kategori_layout"
        android:layout_marginStart="30dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/muzik"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Müzik "
        android:layout_below="@+id/linear4_kategori_layout"
        android:layout_marginStart="175dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/kozmo"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="Kozmetık"
        android:layout_below="@+id/linear4_kategori_layout"
        android:layout_marginStart="310dp"
        android:textSize="18sp"/>



</RelativeLayout>